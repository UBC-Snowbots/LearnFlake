<mujoco model="simple_arm">
    <compiler angle="degree"/>
    <option timestep="0.002"/>

    <worldbody>
        <!-- Base of the arm -->
        <body name="base" pos="0 0 0">
            <geom name="base_geom" type="cylinder" size="0.05 0.02" rgba="0.2 0.2 0.2 1"/>

            <!-- First link -->
            <body name="link1" pos="0 0 0.02">
                <joint name="joint1" type="hinge" axis="0 0 1" range="-90 90"/>
                <geom name="link1_geom" type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="0.4 0.6 0.8 1"/>

                <!-- Second link -->
                <body name="link2" pos="0.2 0 0">
                    <joint name="joint2" type="hinge" axis="0 0 1" range="-90 90"/>
                    <geom name="link2_geom" type="capsule" fromto="0 0 0 0.2 0 0" size="0.02" rgba="0.8 0.6 0.4 1"/>

                    <!-- End effector body matches manipulator expectations -->
                    <body name="right_hand" pos="0.2 0 0">
                        <geom name="eef_geom" type="sphere" size="0.015" rgba="1 0.4 0.4 1"/>
                        <site name="ee_site" pos="0 0 0" size="0.01" rgba="1 0 0 1"/>
                    </body>
                </body>
            </body>
        </body>
    </worldbody>

    <actuator>
        <position name="act1" joint="joint1" kp="50"/>
        <position name="act2" joint="joint2" kp="50"/>
    </actuator>
</mujoco>
